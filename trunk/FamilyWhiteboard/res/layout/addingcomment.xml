<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent"
                android:padding="10px"
                android:background="#fff">

<ImageView
	android:id="@+id/userpic"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/profilepicture2"
	/>
<TextView  
	android:id="@+id/username"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="John Tsai"
    android:layout_toRightOf="@id/userpic"
    android:textColor="#000"
    android:background="#e0e0e0"
    android:layout_marginLeft="10px"
    />
<EditText
	android:id="@+id/msgbox"
	android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
	android:layout_below="@id/username"
	android:layout_toRightOf="@id/userpic"
	android:hint="Add a Comment..."
	android:textSize="20px"
	android:layout_marginBottom="30px"
	android:layout_marginLeft="10px"
	android:textColor="#153E7E"
	android:background="#e0e0e0"
	/>
<ImageView
	android:id="@+id/iv_addpic"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_below="@id/msgbox"
	android:src="@drawable/camera1"
	/>
<TextView  
	android:id="@+id/tv_addpic"
    android:layout_width="wrap_content" 
    android:layout_height="30px" 
    android:textSize="16px"
    android:text="Add a Picture"
    android:layout_toRightOf="@id/iv_addpic"
    android:layout_alignBottom="@id/iv_addpic"
    android:layout_marginLeft="10px"
    android:textColor="#000"
    android:gravity="center_vertical"
    />
<ImageView
	android:id="@+id/iv_addgps"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:src="@drawable/location1"
	android:layout_below="@id/iv_addpic"
	/>
<TextView  
	android:id="@+id/tv_addgps"
    android:layout_width="wrap_content" 
    android:layout_height="30px" 
    android:textSize="16px"
    android:text="Add a Location Tag"
    android:layout_toRightOf="@id/iv_addgps"
    android:layout_alignBottom="@id/iv_addgps"
    android:textColor="#000"
    android:layout_marginLeft="10px"
    android:gravity="center_vertical"
    />
    <TextView  
	android:id="@+id/tv_gpsloc"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text=" "
    android:textSize="10px"
    android:layout_below="@id/tv_addgps"
    android:layout_toRightOf="@id/iv_addgps"
    android:textColor="#000"
    />
     
        <TextView  
	android:id="@+id/pri"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="Priority"
    android:layout_below="@id/iv_addgps"
    android:layout_marginTop="30px"
    android:textSize="16px"
    android:textColor="#000"
    />
    <RadioGroup
      android:id="@+id/rg_pri"
      android:layout_width="wrap_content"
      android:layout_height="60px"
      android:orientation="horizontal"
      android:textColor="#000"
        android:layout_below="@id/pri">

		<RadioButton
		android:id="@+id/lowpri"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text=" Low"
	    android:textColor="#008000"
	    android:layout_marginLeft="20px"
	    />
	    <RadioButton
		android:id="@+id/medpri"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:textColor="#DAA520"
	    android:text=" Medium"
	    android:layout_marginLeft="20px"
	    />
	    <RadioButton
		android:id="@+id/highpri"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:textColor="#B22222"
	    android:text=" High"
	    android:layout_marginLeft="20px"
	    />
    </RadioGroup> 
   <Button
	android:id="@+id/submit"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="Submit Comment"
    android:textSize="16px"
    android:layout_below="@id/rg_pri"
    />
</RelativeLayout>
