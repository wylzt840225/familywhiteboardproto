<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#fff"
>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="45px">
  <TextView android:id="@+id/header"
    android:layout_width="fill_parent"
    android:layout_height="45px"
    android:text="  Settings"
    android:background="#e0e0e0"
    android:textColor="#000"
	android:layout_alignParentLeft="true"
    android:textSize="20px"
    android:gravity="center_vertical">
  </TextView>
    <Button android:id="@+id/helpIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="60px"
    android:layout_marginTop="5px"
    android:background="@drawable/help"> 
  </Button>  
  <Button android:id="@+id/cancelIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10px"
    android:layout_marginTop="5px"
    android:background="@drawable/cancel">
  </Button>  
</RelativeLayout>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="300px">
    <TextView android:id="@+id/yourProfile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your Profile"
    android:textColor="#000"
    android:textSize="30px"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="10px"
    android:layout_marginLeft="10px"/>
  
    <TextView android:id="@+id/name"
    android:layout_width="150px"
    android:layout_height="55px"
    android:text="   Name"
    android:textColor="#000"
    android:background="#e0e0e0"
    android:textSize="28px"
    android:gravity="center_vertical"
	android:layout_alignParentTop="true"
    android:layout_marginTop="60px"
    android:layout_marginLeft="10px"/>
   <EditText android:id="@+id/nameEdit"
    android:layout_width="300px"
    android:layout_height="55px"
    android:textSize="28px"
    android:text="sdf"
    android:textColor="#153E7E"
    android:background="#e0e0e0"
    android:layout_alignParentTop="true"
    android:layout_marginTop="60px"
    android:layout_marginLeft="140px"/>
  
  <TextView android:id="@+id/password"
    android:layout_width="150px"
    android:layout_height="55px"
    android:text=" Password"
    android:textColor="#000"
    android:background="#e0e0e0"
    android:textSize="28px"
    android:gravity="center_vertical"
	android:layout_alignParentTop="true"
    android:layout_marginTop="140px"
    android:layout_marginLeft="10px"/>
   <EditText android:id="@+id/passwordEdit"
    android:layout_width="280px"
    android:layout_height="55px"
    android:textSize="28px"
    android:text="sdf"
    android:textColor="#153E7E"
    android:background="#e0e0e0"
    android:layout_alignParentTop="true"
    android:layout_marginTop="140px"
    android:layout_marginLeft="160px"
    android:password="true"/>
    
    
    <ImageView android:id="@+id/profilePicture"
	android:layout_width="50px"
	android:layout_height="50px"
	android:layout_marginTop="220px"
	android:src="@drawable/profilepicture2"
	android:layout_marginLeft="10px"/>
  
	<Button android:id="@+id/profilePictureEdit"
    android:layout_width="365px"
    android:layout_height="40px"
    android:textSize="25px"
    android:text=" Change Profile Picture           >"
    android:background="#e0e0e0"
    android:textColor="#000"
	android:layout_marginTop="220px"
	android:layout_marginLeft="75px"
	android:gravity="center_vertical"
    />
</RelativeLayout>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="175px">
  <TextView android:id="@+id/yourGroups"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your Groups"
    android:textColor="#000"
    android:textSize="30px"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="10px"
    android:layout_marginLeft="10px"/>
  
  
  <Button android:id="@+id/groupsEdit"
    android:layout_width="430px"
    android:layout_height="40px"
    android:textSize="25px"
    android:text=" Create a New Group                        >"
    android:background="#e0e0e0"
    android:textColor="#000"
	android:layout_marginTop="60px"
	android:layout_marginLeft="10px"
	android:gravity="center_vertical"
    />
    
    
    <ImageView android:id="@+id/group1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:src="@drawable/star"
    android:layout_marginTop="120px"
	android:layout_marginLeft="10px"/>
  
  <Button android:id="@+id/group1Name"
    android:layout_width="240px"
    android:layout_height="30px"
    android:textSize="25px"
    android:text=" "
    android:background="#fff"
    android:textColor="#000"
    android:gravity="center_vertical"
    android:layout_marginTop="123px"
	android:layout_marginLeft="50px"/>    
    
</RelativeLayout>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="50px">
<Button android:id="@+id/saveIcon"
    android:layout_width="150px"
    android:layout_height="wrap_content"
    android:textSize="25px"
    android:text="  Save"
    android:textColor="#000"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:drawableLeft="@drawable/save"/>
</RelativeLayout>
</LinearLayout>