<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#fff"
>
  <TextView android:id="@+id/header"
    android:layout_width="500px"
    android:layout_height="25px"
    android:text="Settings"
    android:background="#e0e0e0"
    android:textColor="#000"
    android:layout_y="0px"
    android:layout_x="0px"
    android:gravity="center_vertical">
  </TextView>
  
  <ImageView android:id="@+id/saveIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_y="1px"
    android:layout_x="420px"
    android:src="@drawable/save">
  </ImageView>  
  <ImageView android:id="@+id/cancelIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_y="1px"
    android:layout_x="450px"
    android:src="@drawable/cancel">
  </ImageView>  
  

  <TextView android:id="@+id/createGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Create a New Group"
    android:layout_y="30px"
    android:layout_x="20px"
    android:textColor="#000"
    android:textSize="18px"
    >
  </TextView>

  <TextView android:id="@+id/groupName"
    android:layout_width="120px"
    android:layout_height="30px"
    android:text="Group Name"
    android:layout_y="60px"
    android:layout_x="30px"
    android:textColor="#000"
    android:background="#e0e0e0"
    android:textSize="18px"
    android:gravity="center">
  </TextView>
  
  <EditText android:id="@+id/groupNameEdit"
    android:layout_width="300px"
    android:layout_height="30px"
    android:textSize="10px"
    android:text="sdf"
    android:layout_y="60px"
    android:layout_x="150px"
    android:textColor="#153E7E"
    android:background="#e0e0e0">
  </EditText>
  
  <TextView android:id="@+id/addMembers"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add Members"
    android:layout_y="120px"
    android:layout_x="20px"
    android:textColor="#000"
    android:textSize="18px"
    >
  </TextView>
  
<ImageView android:id="@+id/findIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_y="155px"
    android:layout_x="30px"
    android:src="@drawable/findicon">
  </ImageView>
  <EditText android:id="@+id/findPeople"
    android:layout_width="250px"
    android:layout_height="30px"
    android:textSize="14px"
    android:text="sdf"
    android:textColor="#000"
    android:background="#e0e0e0"
    android:layout_y="150px"
    android:layout_x="60px"
    android:gravity="center">
  </EditText>
  
    <Button android:id="@+id/groupsEdit"
    android:layout_width="80px"
    android:layout_height="30px"
    android:textSize="16px"
    android:text="Invite"
    android:textColor="#fff"
    android:background="#153E7E"
    android:layout_y="150px"
    android:layout_x="320px">
  </Button>
  
  <ImageView android:id="@+id/groupsIcon1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_y="190px"
    android:layout_x="30px"
    android:src="@drawable/personicon">
  </ImageView>
  <TextView android:id="@+id/groupsEdit1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16px"
    android:text="yash"
    android:textColor="#000"
    android:layout_y="190px"
    android:layout_x="60px">
  </TextView>
  
  <ImageView android:id="@+id/groupsIcon2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_y="220px"
    android:layout_x="30px"
    android:src="@drawable/personicon">
  </ImageView>
  <TextView android:id="@+id/groupsEdit2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16px"
    android:text="simran"
    android:textColor="#000"
    android:layout_y="220px"
    android:layout_x="60px">
  </TextView>
  
  
</AbsoluteLayout>